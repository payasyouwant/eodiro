{
  "compilerOptions": {
    "noEmit": true,
    "outDir": "./",
    "allowJs": true,
    "target": "es6",
    "strict": true,
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["dom", "es5", "es2015"],
    "sourceMap": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"]
    },
    "types": ["node"],
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "dist"]
}
